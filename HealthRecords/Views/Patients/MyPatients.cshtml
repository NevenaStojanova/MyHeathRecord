@model IEnumerable<HealthRecords.Models.Patient>
@{
    ViewBag.Title = "MyPatients";
}

<div class="row" style="margin-top: 30px;">
    <div class="col-md-offset-3 col-md-8">
        <h2 style="color:rgba(243, 16, 171, 0.8); font-weight: 700; display:inline-block;">My Patients</h2>


        <table class="table">
            <tr style="color: rgba(243, 16, 171, 0.8)">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Embg)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Embg)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil btn", @style = "color: rgba(243, 16, 171, 0.8)" })
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-book btn", @style = "color: rgba(243, 16, 171, 0.8)" })
                        @Html.ActionLink("Diagnose", "AddDiagnose", "Diagnoses", new { id = item.Id }, new { @class = "glyphicon glyphicon-plus btn", @style = "color: rgba(243, 16, 171, 0.8); text-decoration: none; " })
                        @Html.ActionLink("Receipt", "AddReceipt", "Receipts", new { id = item.Id }, new { @class = "glyphicon glyphicon-plus btn", @style = "color: rgba(243, 16, 171, 0.8); text-decoration: none; " })
                        @Html.ActionLink(" ", "Delete","Patients", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove btn", @style = "color: rgba(243, 16, 171, 0.8)" })

                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
