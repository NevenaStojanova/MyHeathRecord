@model HealthRecords.Models.AddUserToRole
@{
    ViewBag.Title = "AddUserToRole";
}
<style>
    input[type="text"]:focus, input[type="number"]:focus, #dropdown:focus {
        box-shadow: 0 0 5px rgba(243, 16, 171, 0.8);
        border: 1px solid rgba(243, 16, 171, 0.8);
    }
</style>
<div class="row" style="margin-top: 30px;">
    <div class="col-md-offset-4 col-md-6">

        <div class="col-md-offset-3">
            <h2 style="color: rgba(243, 16, 171, 0.8); font-weight:700; padding: 0; font-size: 30px; margin: 10px;">Add User to Role</h2>
        </div>
        <hr>
        <div class="col-md-offset-2">
            @using (Html.BeginForm("AddUserToRole", "Account"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: rgba(243, 16, 171, 0.8); " })
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.selectedRole, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: rgba(243, 16, 171, 0.8); " })
            @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.Roles), new { @class = "form-control", id = "dropdown" })

        </div>

       
       <div class="form-group">
            <div class="col-md-offset-2 col-md-7" style="padding: 0;">
                <button class="btn btn-default" type="submit" style="background-color: rgba(243, 16, 171, 0.8); border-color: rgba(243, 16, 171, 0.8); color: white; width: 100%;">Save</button>
            </div>
        </div>
}
        </div>
        </div>
    </div>
