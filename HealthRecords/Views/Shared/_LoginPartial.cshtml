@using Microsoft.AspNet.Identity
<style>
    #registerLink, #loginLink, #helloLink, #logOff {
        background-color: transparent;
    }

        #registerLink:hover, #loginLink:hover, #helloLink:hover, #logOff:hover {
            background-color: transparent;
        }
</style>

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", @style = "color: white" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "color: white; font-size: 20px;", id="helloLink" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color: white; font-size: 20px;" id="logOff">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @style = "color: white; font-size: 20px;" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "color: white; font-size: 20px;" })</li>
    </ul>
}
